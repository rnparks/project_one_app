<div class="WSJ-RSS">
<h3>WSJ RSS Feed</h3>
   <% open(@url_wsj) do |rss| %>
      <% feed = RSS::Parser.parse(rss) %>
      <%= "Title: #{feed.channel.title}" %>
         <% feed.items.each do |item| %>
            <%= "Item: #{item.title}" %>
         <% end %>
      <% end %>
</div>





